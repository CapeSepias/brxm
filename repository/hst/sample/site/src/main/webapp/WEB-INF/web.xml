<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <display-name>Sample website with HST</display-name>
  <description>Hippo ECM Sample site</description>

  <!-- General HST configuration -->
  <context-param>
    <description>Comma separated list of configuration files.</description>
    <param-name>configurationFiles</param-name>
    <param-value>/WEB-INF/hst.properties</param-value>
  </context-param>
  <listener>
    <listener-class>org.hippoecm.hst.core.HSTConfiguration</listener-class>
  </listener>
  
  <filter>
    <filter-name>defaultContext</filter-name>
    <filter-class>org.hippoecm.hst.core.ContextFilter</filter-class>
    <init-param>
      <description>
        Bind the context using the attribute name as specified by
        this parameter in the request scope for JSP/JSF pages.
        Defaults to context.
      </description>
      <param-name>attributeName</param-name>
      <param-value>defaultContext</param-value>
    </init-param>
    <init-param>
      <description>
        The repository path to bind as context.
      </description>      
      <param-name>repositoryBaseLocation</param-name>
      <param-value>/live/content</param-value>
    </init-param>
  </filter>

  <filter>
    <filter-name>context</filter-name>
    <filter-class>org.hippoecm.hst.core.URLMappingContextFilter</filter-class>
    <init-param>
      <description>
        Bind the context using the attribute name as specified by
        this parameter in the request scope for JSP/JSF pages.
        Defaults to context.
      </description>
      <param-name>attributeName</param-name>
      <param-value>context</param-value>
    </init-param>
    <init-param>
      <description>
        The repository path to bind as context.
      </description>      
      <param-name>urlBasePath</param-name>
      <param-value>/hst-sample</param-value>
    </init-param>
  </filter>
  
  <filter-mapping>
    <filter-name>defaultContext</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>context</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  
  <servlet>
    <servlet-name>BinariesServlet</servlet-name>
    <servlet-class>org.hippoecm.hst.core.BinariesServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BinariesServlet</servlet-name>
    <url-pattern>/static/*</url-pattern>
  </servlet-mapping>
  
  <!-- Timeout in minutes -->
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <error-page>
    <exception-type>javax.servlet.ServletException</exception-type>
    <location>/error.jsp</location>
  </error-page>
  
</web-app>
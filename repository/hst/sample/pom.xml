<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.hippoecm.hst</groupId>
    <artifactId>hippo-ecm-hst</artifactId>
    <version>1.01.00-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>

  <name>Hippo Site Toolkit ECM edition sample</name>
  <description>Hippo Site Toolkit ECM edition sample</description>
  <groupId>org.hippoecm.hst</groupId>
  <artifactId>hippo-ecm-hst-sample</artifactId>
  <packaging>war</packaging>

  <scm>
    <connection>scm:svn:http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/hst/sample</connection>
    <developerConnection>scm:svn:https://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/hst/sample</developerConnection>
    <url>http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/hst/sample</url>
  </scm>

  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.4.0</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.4.0</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.hippoecm.hst</groupId>
      <artifactId>hippo-ecm-hst-skeleton</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    <!-- Following dependencies are only needed when running embedded repository -->
    <dependency>
      <groupId>org.hippoecm.hst</groupId>
      <artifactId>hippo-ecm-hst-addon-repository</artifactId>
      <version>${parent.version}</version>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-repository-engine</artifactId>
      <version>${ecm.version}</version>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

  <build>
    <defaultGoal>package</defaultGoal>
    <!-- finalName>${project.artifactId}-${project.version}-r${buildNumber}</finalName -->
    <plugins>
      <!-- problems with this entry
      <plugin>
        <inherited>false</inherited>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-clean-plugin</artifactId>
        <configuration>
          <filesets>
            <fileset>
              <directory>.</directory>
              <includes>
                <include>**/*~</include>
                <include>derby.log</include>
                <include>tmlog*</include>
                <include>tm.*</include>
                <include>.lock</include>
                <include>atomikos</include>
                <include>repository</include>
                <include>workspaces</include>
                <include>version</include>
              </includes>
            </fileset>
          </filesets>
        </configuration>
      </plugin>
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1-alpha-1</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Implementation-Build>${buildNumber}</Implementation-Build>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>maven-jetty-plugin</artifactId>
        <version>6.1.3</version>
        <configuration>
          <scanIntervalSeconds>5</scanIntervalSeconds>
          <connectors>
            <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
              <port>8080</port>
            </connector>
          </connectors>
          <contextPath>/</contextPath>
        </configuration>
        <dependencies>
          <!-- atomikos dependecies for running jetty:run[-war|-exploded] -->
          <dependency>
            <groupId>com.atomikos</groupId>
            <artifactId>transactions-api</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
          </dependency>
          <dependency>
            <groupId>com.atomikos</groupId>
            <artifactId>transactions-jta</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
          </dependency>
          <dependency>
            <groupId>com.atomikos</groupId>
            <artifactId>transactions</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
          </dependency>
          <dependency>
            <groupId>com.atomikos</groupId>
            <artifactId>atomikos-util</artifactId>
            <version>3.1.4</version>
            <scope>runtime</scope>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

  <properties>
    <netbeans.hint.useExternalMaven>true</netbeans.hint.useExternalMaven>
    <netbeans.hint.deploy.server>J2EE</netbeans.hint.deploy.server>
    <netbeans.hint.packaging>ear</netbeans.hint.packaging>
  </properties>

</project>

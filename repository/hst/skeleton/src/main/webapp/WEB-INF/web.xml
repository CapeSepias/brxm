<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <!-- General configuration -->
  <display-name>sample website</display-name>
  <description>Hippo ECM Sample site</description>

  <context-param>
    <param-name>repository-address</param-name>
    <!-- param-value>rmi://localhost:1099/hipporepository</param-value -->
    <param-value>target</param-value>
    <description>The address of the repository</description>
  </context-param>

  <filter>
    <filter-name>filter</filter-name>
    <filter-class>org.hippoecm.hst.RewriteFilter</filter-class>
    <init-param>
      <param-name>urlbasepath</param-name>
      <param-value>/hst-sample/pages</param-value>
      <description>Where to find the map from URL to webpages</description>
    </init-param>
    <init-param>
      <param-name>urlbasehome</param-name>
      <param-value>home</param-value>
    </init-param>
    <init-param>
      <param-name>urlmapping</param-name>
      <param-value>/hst-sample/defaultmapping</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>filter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <servlet>
    <servlet-name>Servlet</servlet-name>
    <servlet-class>org.hippoecm.hst.DirectAccessServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/static/*</url-pattern>
  </servlet-mapping>

  <!-- Timeout in minutes -->
  <session-config>
    <session-timeout>5</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <error-page>
    <exception-type>javax.servlet.ServletException</exception-type>
    <location>/error.jsp</location>
  </error-page>

  <taglib>
    <taglib-uri>http://www.hippoecm.org/jsp/hst</taglib-uri>
    <taglib-location>hst.tld</taglib-location>
  </taglib>

</web-app>

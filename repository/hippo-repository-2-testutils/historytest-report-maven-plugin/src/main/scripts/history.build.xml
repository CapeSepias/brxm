<?xml version="1.0" encoding="UTF-8"?>
<project>
    
    <property environment="env" value="" />
    
    <target name="report" depends="charts, html"/>
        
    <target name="charts" depends="init">
        <taskdef name="chart" classname="org.hippoecm.repository.testutils.history.ChartsCreator"/>
        <chart dir="${history.reports}">
            <fileset dir="${history.points}">
                <filename name="*-history.xml"/>
            </fileset>
        </chart>
    </target>
    
    <target name="html" depends="init">
        <taskdef name="prepare" classname="org.hippoecm.repository.testutils.history.PrepareReport"/>
        <prepare/>
        <junitreport todir="${test.results}">
            <fileset dir="${test.results}">
                <include name="TEST-*" />
            </fileset>
            <report format="frames" styledir="target" todir="${history.reports}" />
        </junitreport>        
    </target>
    
    <target name="init">
        <mkdir dir="${history.reports}" />
    </target>
    
</project>
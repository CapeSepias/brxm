<?xml version="1.0" encoding="UTF-8"?>
<project>
        
    <target name="report" depends="init, charts"/>
        
    <target name="charts" if="history.points.available">
        <mkdir dir="${history.reports}"/>
        <taskdef name="chart" classname="org.hippoecm.repository.testutils.history.ChartsCreator"/>
        <chart dir="${history.reports}">
            <fileset dir="${history.points}">
                <filename name="*-history.xml"/>
            </fileset>
        </chart>
    </target>
        
    <target name="init">
        <available file="${history.points}" type="dir" property="history.points.available"/>        
    </target>
    
</project>
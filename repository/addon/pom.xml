<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.hippoecm</groupId>
    <artifactId>hippo-ecm</artifactId>
    <version>2.01.00-dev</version>
    <relativePath>..</relativePath>
  </parent>
  
  <name>Addons</name>
  <description>Hippo ECM addons</description>
  <artifactId>hippo-ecm-addon</artifactId>
  <packaging>pom</packaging>

  <scm>
    <connection>scm:svn:http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/addon</connection>
    <developerConnection>scm:svn:https://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/addon</developerConnection>
    <url>http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/addon</url>
  </scm>

  <modules>
    <module>reviewed-action</module>
  </modules>
  
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.apache.geronimo.specs</groupId>
        <artifactId>geronimo-jta_1.0.1B_spec</artifactId>
        <version>1.0.1</version>
      </dependency>
      <dependency>
        <groupId>org.apache.geronimo.specs</groupId>
        <artifactId>geronimo-j2ee-connector_1.5_spec</artifactId>
        <version>1.0</version>
      </dependency>
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-api</artifactId>
        <version>1.4.0</version>
      </dependency>
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-log4j12</artifactId>
        <version>1.4.0</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  
  <repositories>
    <repository>
      <snapshots><enabled>true</enabled></snapshots>
      <id>repository.hippocms.org</id>
      <name>Hippo Repository for Maven2</name>
      <url>http://repository.hippocms.org/maven2/</url>
      <layout>default</layout>
    </repository>
    <repository>
      <snapshots><enabled>true</enabled></snapshots>
      <id>day.com</id>
      <name>Day Repository for JCR</name>
      <url>http://www.day.com/maven/</url>
      <layout>legacy</layout>
    </repository>
    <repository>
      <!-- For the Atomikos JARs -->
      <id>logicblaze.deps</id>
      <url>http://repo.logicblaze.com/maven2-all</url>
      <snapshots><enabled>true</enabled><updatePolicy>never</updatePolicy></snapshots>
      <releases><enabled>true</enabled><updatePolicy>never</updatePolicy></releases>
    </repository>
    <repository>
      <!-- For JPOX dependencies -->
      <id>JPOX Maven repository</id>
      <url>http://www.jpox.org/downloads/maven/</url>
      <snapshots><enabled>true</enabled></snapshots>
      <releases><enabled>true</enabled></releases>
      <layout>legacy</layout>
    </repository>
  </repositories>
  
  <pluginRepositories>
    <pluginRepository>
      <id>JPOX Maven2 plugin repository</id>
      <name>Repository for JPOX</name>
      <url>http://www.jpox.org/downloads/maven2//</url>
      <layout>default</layout>
      <snapshots><enabled>true</enabled></snapshots>
      <releases><updatePolicy>never</updatePolicy></releases>
    </pluginRepository>
  </pluginRepositories>
  
  <build>
    <defaultGoal>install</defaultGoal>
  </build>  
  
  <reporting>
    <outputDirectory>../target/site/hippo-ecm-addon</outputDirectory>
  </reporting>

</project>

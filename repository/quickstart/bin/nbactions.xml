                <goal>org.codehaus.mojo:exec-maven-plugin:1.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath org.hippoecm.Main ../../war/target/hippo-ecm-quickstart-war-2.01.00-SNAPSHOT.war</exec.args>

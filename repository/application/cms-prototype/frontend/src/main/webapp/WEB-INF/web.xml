<web-app id="hippo-ecm-application-cms-prototype-frontend">

	<!-- General configuration -->
	<display-name>Hippo CMS prototype frontend</display-name>
	<description>A repository-configurable frontend that connects to a remote repository with default configuration.</description>
	
    <!--
    	Remote repository lookup
    -->
	<context-param>
		<param-name>repository-directory</param-name>
		<param-value>rmi://localhost:1099/jackrabbit.repository</param-value>
		<description>Connect to remote Hippo ECM Server</description>
	</context-param>
	
	<!--
	<resource-ref>
		<description>Hippo JCR Repository</description>
		<res-ref-name>jcr/repository</res-ref-name>
		<res-type>javax.jcr.Repository</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	-->
	
	<!-- 
		Frontend application plugin configuration factory, possible values: 
		'java'       ==> Hard coded configuration
		'repository' ==> Reads plugin configuration from the repository
		'properties' ==> Reads plugin configuration from properties file (not implemented yet)
		'spring'     ==> Reads plugin configuration from Spring context (not implemented yet) 
	-->
	<context-param>
		<param-name>frontend-plugin-config</param-name>
		<param-value>repository</param-value>
	</context-param>
		
	<!--Frontend application-->
	<filter>
		<filter-name>Frontend</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>org.hippoecm.frontend.Main</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Frontend</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>

	
	<!-- Timeout in minutes -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
</web-app>

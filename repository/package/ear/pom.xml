<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.hippoecm</groupId>
    <artifactId>hippo-ecm-package</artifactId>
    <version>2.01.00-dev</version>
    <relativePath>..</relativePath>
  </parent>

  <name>EAR packaging</name>
  <description>Hippo ECM application EAR package</description>
  <groupId>org.hippoecm</groupId>
  <artifactId>hippo-ecm-package-ear</artifactId>
  <packaging>ear</packaging>

  <scm>
    <connection>scm:svn:http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/package/ear</connection>
    <developerConnection>scm:svn:https://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/package/ear</developerConnection>
    <url>http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/application/package/ear</url>
  </scm>

  <dependencies>
    <!-- xhina add-on -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-xinha</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-xinha-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>

    <!-- skin add-on -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-skin</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>

    <!-- end-applications -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-repository-application</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-frontend-application</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>

    <!-- cms prototype add-on -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-prototype-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-prototype-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>

    <!-- reviewed actions add-on -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-common</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>

  </dependencies>
    
  <build>
    <!-- defaultGoal>package</defaultGoal -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <encoding>UTF-8</encoding>
          <version>5</version>
          <modules>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-skin</artifactId>
              <contextRoot>/skin</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-xinha</artifactId>
              <contextRoot>/xinha</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-repository-application</artifactId>
              <contextRoot>/repository</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-frontend-application</artifactId>
              <contextRoot>/</contextRoot>
            </webModule>

            <!-- jarModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-api</artifactId>
              <excluded>true</excluded>
            </jarModule>

            <jarModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-reviewed-action-common</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule>
            jarModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-reviewed-action-repository</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-reviewed-action-frontend</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule -->

          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>

      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-frontend</artifactId>

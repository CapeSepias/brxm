      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-xinha-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>

    <!-- skin add-on (must be included before actual front-end application) -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-skin</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>

    <!-- end-applications -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-repository-application</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-frontend-application</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>

    <!-- standard workflow add-on -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-common</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    

<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.hippoecm.hst</groupId>
    <artifactId>hippo-ecm-hst</artifactId>
    <version>2.01.00-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>

  <name>Hippo Site Toolkit ECM edition skeleton</name>
  <description>Hippo Site Toolkit ECM edition skeleton</description>
  <groupId>org.hippoecm.hst</groupId>
  <artifactId>hippo-ecm-hst-skeleton</artifactId>
  <packaging>war</packaging>

  <scm>
    <connection>scm:svn:http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/hst/skeleton</connection>
    <developerConnection>scm:svn:https://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/hst/skeleton</developerConnection>
    <url>http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/hst/skeleton</url>
  </scm>

  <dependencies>
    <!-- general -->
    <dependency>
      <groupId>javax.jcr</groupId>
      <artifactId>jcr</artifactId>
      <version>1.0</version>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.3</version>
      <scope>provided</scope>
    </dependency>
    <!-- Hippo Repository -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-api</artifactId>
      <version>${ecm.version}</version>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-repository-connector</artifactId>
      <version>${ecm.version}</version>
      <scope>runtime</scope>
    </dependency>
    <!-- Hippo Site Toolkit -->
    <dependency>
      <groupId>org.hippoecm.hst</groupId>
      <artifactId>hippo-ecm-hst-core</artifactId>
      <version>${parent.version}</version>
    </dependency>
    <dependency>
      <groupId>org.hippoecm.hst</groupId>
      <artifactId>hippo-ecm-hst-taglib</artifactId>
      <version>${parent.version}</version>
    </dependency>
  </dependencies>

  <build>
    <defaultGoal>package</defaultGoal>
    <!-- finalName>${project.artifactId}-${project.version}-r${buildNumber}</finalName -->
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1-alpha-1</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Implementation-Build>${buildNumber}</Implementation-Build>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <properties>
    <netbeans.hint.useExternalMaven>false</netbeans.hint.useExternalMaven>
    <netbeans.hint.deploy.server>J2EE</netbeans.hint.deploy.server>
    <netbeans.hint.packaging>war</netbeans.hint.packaging>
  </properties>

</project>

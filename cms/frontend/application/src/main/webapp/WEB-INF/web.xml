<web-app id="hippo-ecm-frontend-application">

	<!-- General configuration -->
	<display-name>Hippo ECM minimal frontend</display-name>
	<description>A non-configurable frontend on top of an empty embedded repository.</description>
	
	<!--Start embedded Hippo ECM repository-->
	<context-param>
		<param-name>repository-directory</param-name>
		<param-value>repository</param-value>
		<description>Relative directory where to store files</description>
	</context-param>
	
	<!-- 
		Frontend application plugin configuration factory, possible values: 
		'java'       ==> Hard coded configuration
		'repository' ==> Reads plugin configuration from the repository
		'properties' ==> Reads plugin configuration from properties file (not implemented yet)
		'spring'     ==> Reads plugin configuration from Spring context (not implemented yet) 
	-->
	<context-param>
		<param-name>frontend-plugin-config</param-name>
		<param-value>java</param-value>
	</context-param>
		
	<!--Frontend application-->
	<filter>
		<filter-name>Frontend</filter-name>
		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>org.hippoecm.frontend.Main</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Frontend</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>

	
	<!-- Timeout in minutes -->
	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
	
</web-app>

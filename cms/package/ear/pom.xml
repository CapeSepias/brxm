<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.hippoecm</groupId>
    <artifactId>hippo-ecm-package</artifactId>
    <version>2.01.00-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>

  <name>Hippo ECM EAR package</name>
  <description>Hippo ECM EAR package</description>
  <groupId>org.hippoecm</groupId>
  <artifactId>hippo-ecm-package-ear</artifactId>
  <packaging>ear</packaging>

  <scm>
    <connection>scm:svn:http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/package/ear</connection>
    <developerConnection>scm:svn:https://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/package/ear</developerConnection>
    <url>http://svn.hippocms.org/repos/hippo/hippo-ecm/trunk/package/ear</url>
  </scm>

  <dependencies>
    <!-- Xinha html editor (must be included before actual front-end application) -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-xinha</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-xinha-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Default application skin (must be included before actual front-end application) -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-package-skin</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>

    <!-- End applications -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-repository-application</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-frontend-application</artifactId>
      <version>${parent.version}</version>
      <type>war</type>
    </dependency>
    
    <!-- Hippo ECM application configuration -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-package-config</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Builtin workflow plugins -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-builtin-common</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-builtin-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-builtin-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Reusable components -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-common</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-standards-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Reviewed actions workflow -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-common</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reviewed-action-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Template editor -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-template</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Reporting addon -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reporting-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-reporting-frontend</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- CMS 7 addons-->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-root</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-browse</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-dashboard</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-cms-edit</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>
    
    <!-- default content addon -->
    <dependency>
      <groupId>org.hippoecm</groupId>
      <artifactId>hippo-ecm-addon-defaultcontent-repository</artifactId>
      <version>${parent.version}</version>
      <type>jar</type>
    </dependency>

    <!-- hst add-on -->
    <dependency>
      <groupId>org.hippoecm.hst</groupId>
      <artifactId>hippo-ecm-hst-addon-repository</artifactId>
      <version>2.01.00-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.hippoecm.hst</groupId>
      <artifactId>hippo-ecm-hst-sample-content</artifactId>
      <version>2.01.00-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
      
  </dependencies>

  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <configuration>
          <encoding>UTF-8</encoding>
          <version>5</version>
          <modules>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-package-skin</artifactId>
              <contextRoot>/skin</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-xinha</artifactId>
              <contextRoot>/xinha</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-repository-application</artifactId>
              <contextRoot>/repository</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-frontend-application</artifactId>
              <contextRoot>/</contextRoot>
            </webModule>

            <!-- jarModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-api</artifactId>
              <excluded>true</excluded>
            </jarModule>

            <jarModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-reviewed-action-common</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule>
            jarModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-reviewed-action-repository</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.hippoecm</groupId>
              <artifactId>hippo-ecm-addon-reviewed-action-frontend</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule -->

          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <properties>
    <netbeans.hint.useExternalMaven>true</netbeans.hint.useExternalMaven>
    <netbeans.hint.deploy.server>J2EE</netbeans.hint.deploy.server>
    <netbeans.hint.packaging>ear</netbeans.hint.packaging>
  </properties>

</project>

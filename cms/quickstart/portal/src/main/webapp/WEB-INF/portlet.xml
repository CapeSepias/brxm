<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="cms" version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
  
  <portlet id="HippoCMSPortlet">
    <description>Hippo CMS</description>
    <portlet-name>HippoCMSPortlet</portlet-name>
    <display-name>Hippo CMS</display-name>
    <portlet-class>org.apache.wicket.protocol.http.portlet.WicketPortlet</portlet-class>
    <expiration-cache>300</expiration-cache>
    <supports>
      <mime-type>*/*</mime-type>
      <portlet-mode>VIEW</portlet-mode>
    </supports>
    <supported-locale>en</supported-locale>
    <portlet-info>
      <title>Hippo CMS</title>
      <short-title>Hippo CMS</short-title>
      <keywords>tool,cms</keywords>
    </portlet-info>
    <init-param>
      <name>wicketFilterPath</name>
      <value>/cms</value>
    </init-param>
  </portlet>

</portlet-app>

<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <description>Hippo ECM Sample site all-in-one</description>
  <display-name>Hippo ECM all-in-one Demo</display-name>

  <!-- Repository configuration -->
  <context-param>
    <param-name>repository-address</param-name>
    <param-value>rmi://localhost:1099/hipporepository</param-value>
    <!-- description>The address of the repository</description -->
  </context-param>
  <context-param>
    <param-name>repository-username</param-name>
    <param-value>admin</param-value>
    <!-- description>The username to use for the repository login</description -->
  </context-param>
  <context-param>
    <param-name>repository-password</param-name>
    <param-value>admin</param-value>
    <!-- description>The password to use for the repository login</description -->
  </context-param>

  <!--builtin console-->
  <filter>
    <filter-name>BuiltinConsole</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
      <param-name>applicationClassName</param-name>
      <param-value>org.hippoecm.frontend.Main</param-value>
    </init-param>
    <init-param>
      <param-name>hippoApplication</param-name>
      <param-value>hippo:console (builtin)</param-value>
    </init-param>
  </filter>

  <!--Console application-->
  <filter>
    <filter-name>Console</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
      <param-name>applicationClassName</param-name>
      <param-value>org.hippoecm.frontend.Main</param-value>
    </init-param>
    <init-param>
      <param-name>hippoApplication</param-name>
      <param-value>hippo:console</param-value>
    </init-param>
  </filter>
  
  <!--CMS application-->
  <filter>
    <filter-name>CMS</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
      <param-name>applicationClassName</param-name>
      <param-value>org.hippoecm.frontend.Main</param-value>
    </init-param>
    <init-param>
      <param-name>hippoApplication</param-name>
      <param-value>hippo:cms</param-value>
    </init-param>
  </filter>
  
  <!--CMS prototype application (DEPRECATED)-->
  <filter>
    <filter-name>CMSPrototype</filter-name>
    <filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
    <init-param>
      <param-name>applicationClassName</param-name>
      <param-value>org.hippoecm.frontend.Main</param-value>
    </init-param>
    <init-param>
      <param-name>hippoApplication</param-name>
      <param-value>hippo:cms-prototype</param-value>
    </init-param>
  </filter>

  <filter>
    <filter-name>ContextPreview</filter-name>
    <filter-class>org.hippoecm.hst.ContextFilter</filter-class>
    <init-param>
      <param-name>attributename</param-name>
      <param-value>context</param-value>
      <!-- description>
        Bind the context using the attribute name as specified by
        this parameter in the request scope for JSP/JSF pages.
        Defaults to context.
      </description -->
    </init-param>
    <init-param>
      <param-name>urlbasepath</param-name>
      <param-value>/preview/site/pages</param-value>
      <!-- description>
        Where to find the nodes of type hippo:document
        that can be accessed using url rewriting 
      </description -->
    </init-param>
  </filter>

  <filter>
    <filter-name>ContextLive</filter-name>
    <filter-class>org.hippoecm.hst.ContextFilter</filter-class>
    <init-param>
      <param-name>attributename</param-name>
      <param-value>context</param-value>
      <!-- description>
        Bind the context using the attribute name as specified by
        this parameter in the request scope for JSP/JSF pages.
        Defaults to context.
      </description -->
    </init-param>
    <init-param>
      <param-name>urlbasepath</param-name>
      <param-value>/live/site/pages</param-value>
      <!-- description>
        Where to find the nodes of type hippo:document
        that can be accessed using url rewriting 
      </description -->
    </init-param>
  </filter>

  <filter>
    <filter-name>GlobalContextPreview</filter-name>
    <filter-class>org.hippoecm.hst.AdditionalContext</filter-class>
    <init-param>
      <param-name>attributename</param-name>
      <param-value>global</param-value>
      <!-- description>
        Bind an additional context using the attribute name as specified by
        this parameter in the request scope for JSP/JSF pages.
      </description -->
    </init-param>
    <init-param>
      <param-name>location</param-name>
      <param-value>/preview</param-value>
      <!-- description>
        The path to bind as context.
      </description -->
    </init-param>
  </filter>

  <filter>
    <filter-name>GlobalContextLive</filter-name>
    <filter-class>org.hippoecm.hst.AdditionalContext</filter-class>
    <init-param>
      <param-name>attributename</param-name>
      <param-value>global</param-value>
      <!-- description>
        Bind an additional context using the attribute name as specified by
        this parameter in the request scope for JSP/JSF pages.
      </description -->
    </init-param>
    <init-param>
      <param-name>location</param-name>
      <param-value>/live</param-value>
      <!-- description>
        The path to bind as context.
      </description -->
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>BuiltinConsole</filter-name>
    <url-pattern>/builtin/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>Console</filter-name>
    <url-pattern>/console/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>CMS</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>  
  
  <!--CMS prototype application (DEPRECATED)-->  
  <filter-mapping>
    <filter-name>CMSPrototype</filter-name>
    <url-pattern>/prototype/*</url-pattern>
  </filter-mapping>

  <filter-mapping>
    <filter-name>ContextPreview</filter-name>
    <url-pattern>/preview/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>ContextLive</filter-name>
    <url-pattern>/live/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>GlobalContextPreview</filter-name>
    <url-pattern>/preview/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>GlobalContextLive</filter-name>
    <url-pattern>/live/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
  </filter-mapping>

  <servlet>
    <servlet-name>DirectAccessServlet</servlet-name>
    <servlet-class>org.hippoecm.hst.DirectAccessServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>RepositoryServlet</servlet-name>
    <servlet-class>org.hippoecm.repository.RepositoryServlet</servlet-class>
    <init-param>
      <param-name>repository-directory</param-name>
      <param-value>WEB-INF/storage</param-value>
      <!-- description>
        The (relative) location where to store files
      </description -->
    </init-param>
    <init-param>
      <param-name>repository-config</param-name>
      <param-value>repository.xml</param-value>
      <!-- description>
        The location of the repository configuration file. Unless the location
        starts with file://, the location is retreived with getResourceAsStream()
      </description -->
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>RepositoryServlet</servlet-name>
    <url-pattern>/repository/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DirectAccessServlet</servlet-name>
    <url-pattern>/images/*</url-pattern>
  </servlet-mapping>

  <!-- Timeout in minutes -->
  <session-config>
    <session-timeout>60</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <error-page>
    <exception-type>javax.servlet.ServletException</exception-type>
    <location>/error.jsp</location>
  </error-page>

</web-app>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.onehippo.cms7</groupId>
    <artifactId>hippo-cms7-release</artifactId>
    <version>7.9.0</version>
  </parent>

  <name>Taxonomy demo</name>
  <groupId>org.onehippo.forge</groupId>
  <artifactId>taxonomy-demo</artifactId>
  <version>1.12.00-SNAPSHOT</version>
  <packaging>pom</packaging>

  <properties>

    <forge.taxonomy.version>1.11.03-SNAPSHOT</forge.taxonomy.version>

    <jstl.version>1.1.2</jstl.version>
    <taglibs.version>1.1.2</taglibs.version>

    <junit.version>4.5</junit.version>

    <wagon.ftp.version>1.0-alpha-6</wagon.ftp.version>

    <commons.lang.version>2.6</commons.lang.version>
    <commons-proxy.version>1.0</commons-proxy.version>

    <lib.spring-js.version>2.0.5.RELEASE</lib.spring-js.version>
    <freemarker.version>2.3.18</freemarker.version>

  </properties>

  <dependencyManagement>

    <dependencies>

      <dependency>
        <groupId>javax.servlet</groupId>
        <artifactId>jstl</artifactId>
        <version>${jstl.version}</version>
        <scope>runtime</scope>
      </dependency>

      <dependency>
        <groupId>taglibs</groupId>
        <artifactId>standard</artifactId>
        <version>${taglibs.version}</version>
        <scope>runtime</scope>
      </dependency>

      <dependency>
        <groupId>commons-lang</groupId>
        <artifactId>commons-lang</artifactId>
        <version>${commons.lang.version}</version>
      </dependency>

      <dependency>
        <groupId>org.freemarker</groupId>
        <artifactId>freemarker</artifactId>
        <version>${freemarker.version}</version>
      </dependency>

      <dependency>
        <groupId>org.springframework.webflow</groupId>
        <artifactId>org.springframework.js</artifactId>
        <version>${lib.spring-js.version}</version>
      </dependency>


      <dependency>
        <groupId>org.onehippo</groupId>
        <artifactId>taxonomy-api</artifactId>
        <version>${forge.taxonomy.version}</version>
      </dependency>

      <dependency>
        <groupId>org.onehippo</groupId>
        <artifactId>taxonomy-hst-api</artifactId>
        <version>${forge.taxonomy.version}</version>
      </dependency>

      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${junit.version}</version>
        <scope>test</scope>
      </dependency>

    </dependencies>

  </dependencyManagement>

  <distributionManagement>
    <repository>
      <uniqueVersion>false</uniqueVersion>
      <id>taxonomy-maven-repo</id>
      <url>svn:http://forge.onehippo.org/svn/taxonomy/maven2/</url>
    </repository>
  </distributionManagement>

  <scm>
    <connection>scm:svn:https://forge.onehippo.org/svn/taxonomy/taxonomy-demo/trunk</connection>
    <developerConnection>scm:svn:https://forge.onehippo.org/svn/taxonomy/taxonomy-demo/trunk</developerConnection>
    <url>https://forge.onehippo.org/svn/taxonomy/taxonomy-demo/trunk</url>
  </scm>

  <repositories>
    <repository>
      <id>hippo-maven2</id>
      <url>http://maven.onehippo.com/maven2/</url>
      <snapshots />
      <releases>
        <updatePolicy>never</updatePolicy>
      </releases>
      <layout>default</layout>
    </repository>
    <repository>
      <id>hippo-maven2-snapshots</id>
      <name>Hippo Maven 2</name>
      <url>http://maven.onehippo.com/maven2-snapshots/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
 </repositories>

  <build>
    <defaultGoal>package</defaultGoal>
  </build>

  <profiles>

    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
        <property>
          <name>jrebel</name>
        </property>
      </activation>
      <modules>
        <module>plugin</module>
        <module>content</module>
        <module>cms</module>
        <module>site</module>
      </modules>
    </profile>

    <profile>
      <id>cargo.run</id>
     <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.cargo</groupId>
            <artifactId>cargo-maven2-plugin</artifactId>
            <configuration>
              <deployables>
                <deployable>
                  <type>war</type>
                  <properties>
                    <context>/cms</context>
                  </properties>
                  <location>${project.basedir}/cms/target/cms.war</location>
                </deployable>
                <deployable>
                  <location>${project.basedir}/site/target/site.war</location>
                  <type>war</type>
                  <properties>
                    <context>/site</context>
                  </properties>
                </deployable>
              </deployables>
              <container>
                <systemProperties>
                  <derby.stream.error.file>${project.basedir}/target/derby.log</derby.stream.error.file>
                  <log4j.configuration>file:${project.basedir}/conf/log4j-dev.xml</log4j.configuration>
                  <rebel.log4j-plugin>true</rebel.log4j-plugin>
                  <project.basedir>${project.basedir}</project.basedir>
                </systemProperties>
             </container>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

  </profiles>

</project>

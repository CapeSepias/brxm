    <sv:value>mix:referenceable</sv:value>
  </sv:property>
  <sv:property sv:name="hippo:name" sv:type="String">
    <sv:value>SPA Rules</sv:value>
  </sv:property>
  <sv:property sv:name="hippostd:foldertype" sv:type="String" sv:multiple="true">
    <sv:value>new-urlrewriter-folder</sv:value>
    <sv:value>new-urlrewriter-document</sv:value>
  </sv:property>
  <sv:node sv:name="ssr-rules">
    <sv:property sv:name="jcr:primaryType" sv:type="Name">
      <sv:value>hippo:handle</sv:value>
    </sv:property>
    <sv:property sv:name="jcr:mixinTypes" sv:type="Name" sv:multiple="true">
      <sv:value>hippo:named</sv:value>
      <sv:value>mix:referenceable</sv:value>
    </sv:property>
    <sv:property sv:name="jcr:uuid" sv:type="String">
      <sv:value>5c656715-2324-4df1-abd4-bcd1280c4a08</sv:value>
    </sv:property>
    <sv:property sv:name="hippo:name" sv:type="String">
      <sv:value>SSR Rules</sv:value>
    </sv:property>
    <sv:node sv:name="ssr-rules">
      <sv:property sv:name="jcr:primaryType" sv:type="Name">
        <sv:value>urlrewriter:xmlrule</sv:value>
      </sv:property>
      <sv:property sv:name="jcr:mixinTypes" sv:type="Name" sv:multiple="true">
        <sv:value>mix:referenceable</sv:value>
      </sv:property>
      <sv:property sv:name="hippo:availability" sv:type="String" sv:multiple="true">
        <sv:value>live</sv:value>
      </sv:property>
      <sv:property sv:name="hippostd:state" sv:type="String">
        <sv:value>published</sv:value>
      </sv:property>
      <sv:property sv:name="hippostd:stateSummary" sv:type="String">
        <sv:value>live</sv:value>
      </sv:property>
      <sv:property sv:name="hippostdpubwf:createdBy" sv:type="String">
        <sv:value>admin</sv:value>
      </sv:property>
      <sv:property sv:name="hippostdpubwf:creationDate" sv:type="Date">
        <sv:value>2019-07-23T10:25:50.213+02:00</sv:value>
      </sv:property>
      <sv:property sv:name="hippostdpubwf:lastModificationDate" sv:type="Date">
        <sv:value>2019-07-23T10:25:50.213+02:00</sv:value>
      </sv:property>
      <sv:property sv:name="hippostdpubwf:lastModifiedBy" sv:type="String">
        <sv:value>admin</sv:value>
      </sv:property>
      <sv:property sv:name="hippostdpubwf:publicationDate" sv:type="Date">
        <sv:value>2019-07-23T10:25:50.213+02:00</sv:value>
      </sv:property>
      <sv:property sv:name="urlrewriter:rule" sv:type="String">
        <sv:value>&lt;rule&gt;
          &lt;!-- Rule 1: Exclude requests for Page Model API and binaries --&gt;
          &lt;from&gt;^(?:/[^\/]+)?(?:/_cmsinternal)?/(?:binaries|resourceapi|images)([\?/].*)?$&lt;/from&gt;
          &lt;to last="true"&gt;-&lt;/to&gt;
        &lt;/rule&gt;
  
        &lt;rule&gt;
          &lt;!-- Rule 2: Ensure bloomreach-preview query parameter for preview requests --&gt;
          &lt;from&gt;
            ^((?:/[^\/]+)?/_cmsinternal(?:/[^\?]*)?)(?:\?((?!(.*&amp;amp;)?bloomreach-preview=.*).*))?$
          &lt;/from&gt;
          &lt;to type="redirect" last="true"&gt;$1?$2&amp;amp;bloomreach-preview=true&lt;/to&gt;
        &lt;/rule&gt;

        &lt;rule&gt;
          &lt;!-- Rule 3: Proxy requests to route to the SPA server --&gt;
          &lt;from&gt;^(?:/[^\/]+)?(?:/_cmsinternal)?([\?/].*)?$&lt;/from&gt;
          &lt;to type="proxy" last="true"&gt;http://localhost:3000$0&lt;/to&gt;
        &lt;/rule&gt;</sv:value>
      </sv:property>
    </sv:node>
  </sv:node>
</sv:node>

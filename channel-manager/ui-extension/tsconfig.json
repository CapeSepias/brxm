{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src",
    "declarationDir": "./dist"
  },
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "jest"
  ],
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__mocks__/*",
    "**/*.spec.ts"
  ]
}

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="properties">
      <props>
        <prop key="test.default.repository.address">target/storage</prop>
        <prop key="test.default.repository.user.name">editor</prop>
        <prop key="test.default.repository.password">editor</prop>
        <prop key="test.writable.repository.address">target/storage-writable</prop>
        <prop key="test.writable.repository.user.name">admin</prop>
        <prop key="test.writable.repository.password">admin</prop>
      </props>
    </property>
    <property name="locations">
      <list>
        <value>classpath:build.properties</value>
      </list>
    </property>
  </bean>

  <bean id="javax.jcr.Credentials.default" class="javax.jcr.SimpleCredentials">
    <constructor-arg value="${test.default.repository.user.name}" />
    <constructor-arg value="${test.default.repository.password}" />
  </bean>
  
  <bean id="javax.jcr.Credentials.writable" class="javax.jcr.SimpleCredentials">
    <constructor-arg value="${test.writable.repository.user.name}" />
    <constructor-arg value="${test.writable.repository.password}" />
  </bean>
  
  <bean id="javax.jcr.Repository" class="org.hippoecm.hst.core.jcr.pool.MultipleRepositoryImpl">
    <!-- Delegating session pool repositories -->
    <constructor-arg>
      <map>
        <entry key-ref="javax.jcr.Credentials.default" value-ref="javax.jcr.Repository.default" />
        <entry key-ref="javax.jcr.Credentials.writable" value-ref="javax.jcr.Repository.writable" />
      </map>
    </constructor-arg>
    <!-- The default credentials for login() without credentials parameter. -->
    <constructor-arg ref="javax.jcr.Credentials.default" />
  </bean>
  
  <bean id="javax.jcr.Repository.default" class="org.hippoecm.hst.core.jcr.pool.BasicPoolingRepository" 
        init-method="initialize" destroy-method="close">
    <!-- delegated JCR repository -->
    <property name="repositoryAddress" value="${test.default.repository.address}" />
    <property name="defaultCredentialsUserID" value="${test.default.repository.user.name}" />
    <property name="defaultCredentialsPassword" value="${test.default.repository.password}" />
    <property name="readOnly" value="false" />
    <!-- Pool properties. Refer to the GenericObjectPool of commons-pool library. -->
    <property name="maxActive" value="25" />
    <property name="maxIdle" value="5" />
    <property name="minIdle" value="0" />
    <property name="initialSize" value="0" />
    <property name="maxWait" value="10000" />
    <property name="testOnBorrow" value="true" />
    <property name="testOnReturn" value="false" />
    <property name="testWhileIdle" value="false" />
    <property name="timeBetweenEvictionRunsMillis" value="60000" />
    <property name="numTestsPerEvictionRun" value="1" />
    <property name="minEvictableIdleTimeMillis" value="60000" />
  </bean>
  
  <bean id="javax.jcr.Repository.writable" class="org.hippoecm.hst.core.jcr.pool.BasicPoolingRepository" 
        init-method="initialize" destroy-method="close">
    <!-- delegated JCR repository -->
    <property name="repositoryAddress" value="${test.writable.repository.address}" />
    <property name="defaultCredentialsUserID" value="${test.writable.repository.user.name}" />
    <property name="defaultCredentialsPassword" value="${test.writable.repository.password}" />
    <property name="readOnly" value="false" />
    <!-- Pool properties. Refer to the GenericObjectPool of commons-pool library. -->
    <property name="maxActive" value="25" />
    <property name="maxIdle" value="5" />
    <property name="minIdle" value="0" />
    <property name="initialSize" value="0" />
    <property name="maxWait" value="10000" />
    <property name="testOnBorrow" value="true" />
    <property name="testOnReturn" value="false" />
    <property name="testWhileIdle" value="false" />
    <property name="timeBetweenEvictionRunsMillis" value="60000" />
    <property name="numTestsPerEvictionRun" value="1" />
    <property name="minEvictableIdleTimeMillis" value="60000" />
  </bean>
    
</beans>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- Valves -->
  
  <bean id="initializationValve" class="org.hippoecm.hst.core.container.InitializationValve">
    <property name="resourceLifecycleManagements">
      <list>
        <ref bean="org.hippoecm.hst.core.jcr.pool.PoolingRepository.pooledSessionLifecycleManagement" />
      </list>
    </property>
  </bean>
    
  <bean id="contextResolvingValve" class="org.hippoecm.hst.core.container.ContextResolvingValve">
  </bean>
  
  <bean id="actionValve" class="org.hippoecm.hst.core.container.ActionValve">
  </bean>
  
  <bean id="aggregationValve" class="org.hippoecm.hst.core.container.AggregationValve">
    <constructor-arg>
      <ref bean="org.hippoecm.hst.core.request.HstRequestProcessor" />
    </constructor-arg>
  </bean>
  
  <bean id="cleanupValve" class="org.hippoecm.hst.core.container.CleanupValve">
    <property name="resourceLifecycleManagements">
      <list>
        <ref bean="org.hippoecm.hst.core.jcr.pool.PoolingRepository.pooledSessionLifecycleManagement" />
      </list>
    </property>
  </bean>
  
  <!-- Pipelines -->
  
  <bean id="org.hippoecm.hst.core.container.Pipelines" class="org.hippoecm.hst.core.container.HstSitePipelines">
    <constructor-arg>
      <list>
        <bean class="org.hippoecm.hst.core.container.HstSitePipeline">
          <constructor-arg value="DefaultSitePipeline"/>
          <constructor-arg>
            <list>
              <ref bean="initializationValve" />
              <ref bean="contextResolvingValve" />
              <ref bean="actionValve" />
              <ref bean="aggregationValve" />
              <ref bean="cleanupValve" />
            </list>
          </constructor-arg>
        </bean>
      </list>
    </constructor-arg>
    <constructor-arg value="DefaultSitePipeline" />
  </bean>
   
</beans>


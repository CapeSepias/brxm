<!--suppress SpringFacetInspection -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

  <bean id="pageModelJacksonObjectMapperExtraMixins"
        class="org.springframework.beans.factory.config.MapFactoryBean">
    <property name="sourceMap">
      <map>
      </map>
    </property>
  </bean>

  <bean id="org.hippoecm.hst.core.pagemodel.container.HstBeansExcludingObjectMapperDecorator"
        class="org.hippoecm.hst.core.pagemodel.container.HstBeansExcludingObjectMapperDecorator">
    <property name="extraMixins" ref="pageModelJacksonObjectMapperExtraMixins" />
  </bean>

  <bean id="pageModelAnnotationIntrospector"
        class="com.fasterxml.jackson.databind.introspect.JacksonAnnotationIntrospector">
  </bean>

  <bean id="pageModelJacksonObjectMapper"
        class="org.hippoecm.hst.site.container.TypeDeterminedMethodInvokingFactoryBean">
    <constructor-arg value="com.fasterxml.jackson.databind.ObjectMapper" />
    <property name="targetObject" ref="org.hippoecm.hst.core.pagemodel.container.HstBeansExcludingObjectMapperDecorator" />
    <property name="targetMethod" value="decorate" />
    <property name="arguments">
      <list>
        <bean class="com.fasterxml.jackson.databind.ObjectMapper">
          <property name="annotationIntrospector" ref="pageModelAnnotationIntrospector" />
        </bean>
      </list>
    </property>
  </bean>

  <bean id="pageModelComponentWindowResponseAppender"
        class="org.hippoecm.hst.core.pagemodel.container.PageModelComponentWindowResponseAppender">
    <property name="attributeContributors" ref="cmsComponentAttributeContributors"/>
    <property name="previewOnly" value="${pagemodel.component.window.response.appender.previewonly}" />
  </bean>

  <bean id="pageModelComponentWindowResponseAppenders" class="org.springframework.beans.factory.config.ListFactoryBean">
    <property name="sourceList">
      <list>
        <ref bean="pageModelComponentWindowResponseAppender" />
      </list>
    </property>
  </bean>

  <bean id="pageModelAggregationValve" parent="aggregationValve"
        class="org.hippoecm.hst.core.pagemodel.container.PageModelAggregationValve">
    <property name="valveName" value="pageModelAggregationValve"/>
    <property name="componentWindowResponseAppenders" ref="pageModelComponentWindowResponseAppenders" />
    <property name="objectMapper" ref="pageModelJacksonObjectMapper" />
  </bean>

  <bean id="pageModelPipeline" class="org.hippoecm.hst.core.container.HstSitePipeline">
    <property name="initializationValves">
      <list>
        <ref bean="initializationValve" />
        <ref bean="cmsSecurityValve"/>
      </list>
    </property>
    <property name="processingValves">
      <list>
        <ref bean="securityValve" />
        <ref bean="subjectBasedSessionValve" />
        <ref bean="jcrSessionStatefulConcurrencyValve"/>
        <ref bean="contextResolvingValve" />
        <ref bean="localizationValve" />
        <ref bean="actionValve" />
        <ref bean="resourceServingValve" />
        <ref bean="pageInfoRenderingValve" />
        <ref bean="esiPageInfoScanningValve" />
        <ref bean="pageCachingValve"/>
        <ref bean="componentRenderingValve" />
        <ref bean="pageModelAggregationValve" />
      </list>
    </property>
    <property name="cleanupValves">
      <list>
        <ref bean="diagnosticReportingValve" />
        <ref bean="cleanupValve" />
      </list>
    </property>
  </bean>

</beans>


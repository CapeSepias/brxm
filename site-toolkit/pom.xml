      </dependency>
      
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-mock</artifactId>
        <version>${spring-mock.version}</version>
        <scope>test</scope>
      </dependency>

      <!-- Hippo ECM Depedencies -->
    

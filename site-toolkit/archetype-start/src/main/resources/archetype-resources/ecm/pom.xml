    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>${groupId}</groupId>
        <artifactId>${artifactId}</artifactId>
        <version>${version}</version>
        <relativePath>..</relativePath>
    </parent>

    <name>HST2 Project ECM WAR package</name>
    <description>HST2 Project ECM WAR package</description>
    <groupId>${groupId}</groupId>
    <artifactId>${rootArtifactId}-ecm</artifactId>
    <packaging>war</packaging>

    <properties>
        <org.hippoecm.version>2.01.00-SNAPSHOT</org.hippoecm.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.hippoecm</groupId>
            <artifactId>hippo-ecm-package-war</artifactId>
            <version>${dollar}{org.hippoecm.version}</version>
            <type>war</type>
        </dependency>
        
        <!-- dependency below needs to move to hippoecm hst --> 
        <dependency>
            <groupId>org.hippoecm.hst</groupId>
            <artifactId>hippo-ecm-hst-addon-repository</artifactId>
            <version>1.01.00-SNAPSHOT</version>
            <type>jar</type>
        </dependency>
        
        <dependency>
            <groupId>${groupId}</groupId>
            <artifactId>${rootArtifactId}-sample-content</artifactId>
            <version>${version}</version>
            <type>jar</type>
        </dependency>
      
    </dependencies>

    
    <build>
        <defaultGoal>package</defaultGoal>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.1-alpha-1</version>
                <configuration>
                    <manifest>
                        <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                    </manifest>
                    <archive>
                        <manifestEntries>
                            <Implementation-Build>${dollar}{buildNumber}</Implementation-Build>
                        </manifestEntries>
                    </archive>
                    <overlays>
                        <overlay>
                            <groupId>org.hippoecm</groupId>
                            <artifactId>hippo-ecm-package-war</artifactId>
                        </overlay>
                    </overlays>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.mortbay.jetty</groupId>
                <artifactId>maven-jetty-plugin</artifactId>
                <version>6.1.10</version>
                <configuration>
                    <scanIntervalSeconds>5</scanIntervalSeconds>
                    <connectors>
                        <connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
                            <port>8080</port>
                        </connector>
                    </connectors>
                    <contextPath>/</contextPath>
                </configuration>
                <dependencies>
                    <!-- atomikos dependecies for running jetty:run[-war|-exploded] -->
                    <dependency>
                        <groupId>com.atomikos</groupId>
                        <artifactId>transactions-api</artifactId>
                        <version>3.1.4</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>com.atomikos</groupId>
                        <artifactId>transactions-jta</artifactId>
                        <version>3.1.4</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>com.atomikos</groupId>
                        <artifactId>transactions</artifactId>
                        <version>3.1.4</version>
                        <scope>runtime</scope>
                    </dependency>
                    <dependency>
                        <groupId>com.atomikos</groupId>
                        <artifactId>atomikos-util</artifactId>
                        <version>3.1.4</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

</project>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.onehippo.cms7</groupId>
    <artifactId>hippo-packages</artifactId>
    <version>2.22.02-SNAPSHOT</version>
  </parent>

  <name>Hippo Package CMS Dependencies</name>
  <description>Hippo Package CMS Dependencies</description>
  <artifactId>hippo-package-cms-dependencies</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-dependencies</artifactId>
      <version>${hippo.cms.version}</version>
      <type>pom</type>
    </dependency>

    <!-- Broken links addon -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-brokenlinks-frontend</artifactId>
      <version>${hippo.addon-brokenlinks.version}</version>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-brokenlinks-repository</artifactId>
      <version>${hippo.addon-brokenlinks.version}</version>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-brokenlinks-common</artifactId>
      <version>${hippo.addon-brokenlinks.version}</version>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-wfdropbox</artifactId>
      <version>${hippo.repository.version}</version>
    </dependency>

    <!-- Publication workflow -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-publication-workflow-common</artifactId>
      <version>${hippo.addon-publication-workflow.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-publication-workflow-repository</artifactId>
      <version>${hippo.addon-publication-workflow.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-publication-workflow-frontend</artifactId>
      <version>${hippo.addon-publication-workflow.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Faceted date type -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-faceteddate-repository</artifactId>
      <version>${hippo.addon-faceteddate.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-faceteddate-frontend</artifactId>
      <version>${hippo.addon-faceteddate.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Repository, which explicitly comes without upgrade module to allow
         specific upgrades and upgrades that come post-release cycle.
	 The servlets may included in the repository dependencies, but this
	 dependency is transient, as sites/applications may not want to
	 have them, while for a packages CMS these are very useful, yet still
	 optional.  For the CMS it is a recommended practise.
	 (note that the dependency is still there, because of backward
	 compatibility).
      -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-dependencies</artifactId>
      <version>${hippo.repository.version}</version>
      <type>pom</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-upgrade</artifactId>
      <version>${hippo.repository.version}</version>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-servlets</artifactId>
      <version>${hippo.repository.version}</version>
    </dependency>

    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>${commons-lang.version}</version>
    </dependency>
  </dependencies>

  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

</project>

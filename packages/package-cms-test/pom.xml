<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.onehippo.cms7</groupId>
    <artifactId>hippo-packages</artifactId>
    <version>2.19.02</version>
  </parent>

  <name>Hippo package CMS test</name>
  <description>Hippo package CMS test</description>
  <artifactId>hippo-package-cms-test</artifactId>
  <packaging>jar</packaging>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>${slf4j.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-package-cms-war</artifactId>
      <version>${project.version}</version>
      <type>war</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-engine</artifactId>
      <version>${repository.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-modules</artifactId>
      <version>${repository.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-package-cms-ear</artifactId>
      <version>${project.version}</version>
      <type>ear</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-quickstart-ear</artifactId>
      <version>${project.version}</version>
      <type>ear</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-tools-testutils</artifactId>
      <version>${repository.version}</version>
      <type>jar</type>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.openqa.selenium.client-drivers</groupId>
      <artifactId>selenium-java-client-driver</artifactId>
      <version>${selenium.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.openqa.selenium.server</groupId>
      <artifactId>selenium-server</artifactId>
      <version>${selenium.version}</version>
    </dependency>

    <!-- Testing needs a JTA implementation -->
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-jta_1.1_spec</artifactId>
      <version>${org.apache.geronimo.specs.jta.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.atomikos</groupId>
      <artifactId>transactions-api</artifactId>
      <version>${atomikos.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.atomikos</groupId>
      <artifactId>transactions</artifactId>
      <version>${atomikos.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.atomikos</groupId>
      <artifactId>transactions-jta</artifactId>
      <version>${atomikos.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.atomikos</groupId>
      <artifactId>atomikos-util</artifactId>
      <version>${atomikos.version}</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <defaultGoal>test</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
   </plugins>
  </build>

  <profiles>
    <profile>
      <id>tests</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.onehippo.cms7</groupId>
          <artifactId>hippo-repository-engine</artifactId>
          <version>${repository.version}</version>
          <type>jar</type>
          <classifier>tests</classifier>
          <scope>test</scope>
          <optional>true</optional>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>skip-tests</id>
      <activation>
        <property>
          <name>maven.test.skip</name>
          <value>true</value>
        </property>
      </activation>
      <dependencyManagement>
        <dependencies>
          <dependency>
            <groupId>org.onehippo.cms7</groupId>
            <artifactId>hippo-repository-engine</artifactId>
            <version>${repository.version}</version>
            <type>jar</type>
            <classifier>tests</classifier>
            <scope>test</scope>
            <optional>true</optional>
          </dependency>
        </dependencies>
      </dependencyManagement>
    </profile>
    <profile>
      <id>appserver-tests</id>
      <activation>
        <property>
          <name>appserver.home</name>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.onehippo.cms7</groupId>
          <artifactId>hippo-repository-engine</artifactId>
          <version>${repository.version}</version>
          <type>jar</type>
          <classifier>tests</classifier>
          <scope>test</scope>
          <optional>true</optional>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <forkMode>always</forkMode>
              <workingDirectory>${project.build.directory}</workingDirectory>
              <excludes>
                <exclude>**/*SeleniumTest.java</exclude>
                <exclude>**/SmokeTest.java</exclude>
              </excludes>
              <systemProperties>
                <property>
                  <name>product</name>
                  <value>${basedir}/../quickstart/ear/target/hippo-quickstart-ear-${project.version}.ear</value>
                  <!-- FIXME: should have better reference above -->
                </property>
              </systemProperties>
              <additionalClasspathElements>
                <!-- FIXME: not all of these dependencies are needed, should be sorted out -->
                <additionalClasspathElement>${appserver.home}/lib/appserv-deployment-client.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/Pack200Task.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/activation.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/admin-cli-ee.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/admin-cli.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-admin.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-cmp.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-deployment-client.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-ee.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-ext.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-jstl.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-jwsacc.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-launch.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-rt.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-se.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-tags.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-upgrade.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/appserv-ws.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/com-sun-commons-launcher.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/com-sun-commons-logging.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/dbschema.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/j2ee-svc.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/j2ee.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/javaee.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/jesmf-plugin.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/jhall.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/jmac-api.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/jmxremote_optional.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/jsf-impl.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/jxta.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/mail.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/shoal-gms.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/sun-appserv-ant.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/toplink-essentials-agent.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/toplink-essentials.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/webservices-rt.jar</additionalClasspathElement>
                <additionalClasspathElement>${appserver.home}/lib/webservices-tools.jar</additionalClasspathElement>
              </additionalClasspathElements>
              <skip>true</skip>
              <!-- skipTests>true</skipTests -->
            </configuration>
            <executions>
              <execution>
                <id>testing</id>
                <phase>integration-test</phase>
                <goals>
                  <goal>test</goal>
                </goals>
                <configuration>
                  <skip>false</skip>
                  <skipTests>false</skipTests>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.apache.geronimo.plugins</groupId>
            <artifactId>selenium-maven-plugin</artifactId>
            <version>1.2-beta</version>
            <executions>
              <execution>
                <id>start-selenium</id>
                <phase>pre-integration-test</phase>
                 <goals>
                   <goal>start-server</goal>
                 </goals>
                 <configuration>
                   <background>true</background>
                 </configuration>
               </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>

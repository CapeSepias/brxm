<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.onehippo.cms7</groupId>
    <artifactId>hippo-quickstart</artifactId>
    <version>2.17.03-SNAPSHOT</version>
  </parent>

  <name>Hippo Quickstart CMS EAR</name>
  <description>Hippo Quickstart CMS EAR</description>
  <artifactId>hippo-quickstart-ear</artifactId>
  <packaging>ear</packaging>

  <dependencies>
    <!-- Xinha html editor (must be included before actual front-end application) -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-xinha-resources</artifactId>
      <version>${cms.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-xinha-integration</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Application skin (must be included before actual front-end application) -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-skin</artifactId>
      <version>${cms.version}</version>
      <type>war</type>
    </dependency>
    
    <!-- Application layout (must be included before actual front-end application) -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-layout</artifactId>
      <version>${cms.version}</version>
      <type>war</type>
    </dependency>

    <!-- End applications -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-application</artifactId>
      <version>${repository.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-application</artifactId>
      <version>${cms.version}</version>
      <type>war</type>
    </dependency>

    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-config</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Ldap support -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-ldap</artifactId>
      <version>${repository.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Builtin workflow plugins -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-builtin</artifactId>
      <version>${repository.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-config</artifactId>
      <version>${repository.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-builtin</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Versioning addon -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-versioning</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Reusable frontend components -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-api</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Quick link to documents addon -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-gotolink</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Publication workflow -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-publication-workflow-common</artifactId>
      <version>${publication-workflow.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-publication-workflow-repository</artifactId>
      <version>${publication-workflow.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-publication-workflow-frontend</artifactId>
      <version>${publication-workflow.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Faceted date type -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-faceteddate-repository</artifactId>
      <version>${faceteddate.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-faceteddate-frontend</artifactId>
      <version>${faceteddate.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Template editor -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-editor-common</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-editor-repository</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-editor-frontend</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- Reporting addon -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-reporting</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-reporting</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- CMS 7 addons-->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-rootpage</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-browse</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-dashboard</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-edit</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-admin</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- image gallery addon -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-gallery-common</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-gallery-repository</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-gallery-frontend</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- translation addon -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-translation-common</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-translation-repository</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-translation-frontend</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- search addon -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-search</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-workflowmenu</artifactId>
      <version>${cms.version}</version>
      <type>jar</type>
    </dependency>

    <!-- default content addon -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-defaultcontent-repository</artifactId>
      <version>${defaultcontent.version}</version>
      <type>jar</type>
    </dependency>

    <!-- upgrade modules -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-upgrade</artifactId>
      <version>${repository.version}</version>
    </dependency>
  </dependencies>

  <build>
    <defaultGoal>package</defaultGoal>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
        <version>1.0-beta-4</version>
        <executions>
          <execution>
            <phase>validate</phase>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <doCheck>false</doCheck>
          <doUpdate>false</doUpdate>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.4.2</version>
        <configuration>
          <encoding>UTF-8</encoding>
          <version>5</version>
          <manifest>
            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
          </manifest>
          <archive>
            <manifestEntries>
              <Implementation-Build>${buildNumber}</Implementation-Build>
              <Implementation-Version>${project.version}</Implementation-Version>
            </manifestEntries>
          </archive>
          <modules>
            <webModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-cms-skin</artifactId>
              <contextRoot>/skin</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-cms-layout</artifactId>
              <contextRoot>/layout</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-cms-xinha-resources</artifactId>
              <contextRoot>/xinha</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-repository-application</artifactId>
              <contextRoot>/repository</contextRoot>
            </webModule>
            <webModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-cms-application</artifactId>
              <contextRoot>/</contextRoot>
            </webModule>

            <!-- jarModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-repository-api</artifactId>
              <excluded>true</excluded>
            </jarModule>

            <jarModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-addon-publication-workflow-common</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule>
            jarModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-addon-publication-workflow-repository</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule>
            <jarModule>
              <groupId>org.onehippo.cms7</groupId>
              <artifactId>hippo-addon-publication-workflow-frontend</artifactId>
              <includeInApplicationXml>false</includeInApplicationXml>
            </jarModule -->

          </modules>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <properties>
    <netbeans.hint.useExternalMaven>true</netbeans.hint.useExternalMaven>
    <netbeans.hint.deploy.server>J2EE</netbeans.hint.deploy.server>
    <netbeans.hint.packaging>ear</netbeans.hint.packaging>
  </properties>

</project>

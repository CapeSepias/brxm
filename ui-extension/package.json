{
  "name": "@bloomreach/ui-extension",
  "version": "13.0.0",
  "description": "BloomReach OpenUI SDK ",
  "keywords": [
    "bloomreach",
    "sdk",
    "openui"
  ],
  "author": "BloomReach B.V.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://code.onehippo.org/cms-community/hippo-addon-channel-manager"
  },
  "main": "target/classes/ui-extension.js",
  "types": "target/classes/ui-extension.d.ts",
  "scripts": {
    "build": "webpack --config=webpack.config.js",
    "lint": "tslint --project .",
    "test": "npm run lint && jest"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "./coverage",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/?(*.)spec.ts"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0",
    "@babel/plugin-proposal-class-properties": "^7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0",
    "@babel/plugin-transform-object-assign": "^7.0",
    "@babel/polyfill": "^7.0",
    "@babel/preset-env": "^7.0",
    "@types/jest": "^23.0",
    "babel-loader": "^8.0",
    "dts-bundle": "^0.7",
    "jest": "^23.0",
    "js-beautify": "^1.0",
    "ts-jest": "^23.0",
    "ts-loader": "^5.0",
    "tslint": "^5.0",
    "tslint-config-airbnb": "^5.0",
    "typescript": "^3.0",
    "uglifyjs-webpack-plugin": "^2.0",
    "webpack": "^4.0",
    "webpack-cli": "^3.0",
    "webpack-merge": "^4.0"
  },
  "dependencies": {
    "penpal": "^3.0"
  }
}

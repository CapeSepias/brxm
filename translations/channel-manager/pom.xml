<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.onehippo.cms7</groupId>
    <artifactId>hippo-community-translations</artifactId>
    <version>11.1.0-SNAPSHOT</version>
  </parent>
  
  <name>Hippo Addon Channel Manager Translations</name>
  <artifactId>hippo-addon-channel-manager-l10n</artifactId>
  <version>4.0.0-SNAPSHOT</version>
  
  <properties>
    <hippo.addon-channel-manager.version>4.0.0-SNAPSHOT</hippo.addon-channel-manager.version>
  </properties>
  
  <dependencies>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-channel-manager-frontend</artifactId>
      <version>${hippo.addon-channel-manager.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-channel-manager-frontend-ng</artifactId>
      <version>${hippo.addon-channel-manager.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-addon-channel-manager-repository</artifactId>
      <version>${hippo.addon-channel-manager.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.onehippo.cms.l10n</groupId>
        <artifactId>hippo-cms-l10n-maven-plugin</artifactId>
        <version>${hippo.l10n-tooling.version}</version>
        <configuration combine.children="append">
          <excludes>
            <exclude>wicket.properties</exclude>
            <!-- TODO: deviceskins localizations are excluded as they are scheduled to be removed with the NG feature.
                 After merging the NG feature the below exclusions should be removed again
            -->
            <exclude>org/onehippo/cms7/channelmanager/templatecomposer/deviceskins/devices/desktop.properties</exclude>
            <exclude>org/onehippo/cms7/channelmanager/templatecomposer/deviceskins/devices/ipad_landscape.properties</exclude>
            <exclude>org/onehippo/cms7/channelmanager/templatecomposer/deviceskins/devices/ipad_portrait.properties</exclude>
            <exclude>org/onehippo/cms7/channelmanager/templatecomposer/deviceskins/devices/iphone_landscape.properties</exclude>
            <exclude>org/onehippo/cms7/channelmanager/templatecomposer/deviceskins/devices/iphone_portrait.properties</exclude>
          </excludes>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
